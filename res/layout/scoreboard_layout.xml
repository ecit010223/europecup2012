<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scorelinepanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left|center_vertical"
    android:orientation="horizontal"
    android:padding="3dp" >

    <TextView
        android:id="@+id/txtScoreSequence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/seq"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#000000"
        android:textSize="12sp" />


    <ImageView
        android:id="@+id/txt_scorebar_name"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="@null"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/txt_scorebar_w"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp" />

    <TextView
        android:id="@+id/txt_scorebar_d"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp" />

    <TextView
        android:id="@+id/txt_scorebar_l"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp" />

    <TextView
        android:id="@+id/txt_scorebar_goal"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp" />

    <TextView
        android:id="@+id/txt_scorebar_lgoal"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp" />

    <TextView
        android:id="@+id/txt_scorebar_score"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp" />

</LinearLayout>